<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="wu.rang.hao.servicedemo.MainActivity" >

    <Button
        android:id="@+id/startService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="start sevrvice" />
    <Button 
        android:id="@+id/stopService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/startService"
        android:text="stop service"
        />
     <Button 
        android:id="@+id/connectionservice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/stopService"
        android:text="connection service"
        />
     <Button
        android:id="@+id/disconnectionService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/connectionservice"
        android:text="disconnectionService" />
  	 <Button
        android:id="@+id/intentService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/disconnectionService"
        android:text="IntentService" />

</RelativeLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="wu.rang.hao.sensor.MainActivity" >
	
	<Button 
	    android:id="@+id/sensorButton1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="获取所有的传感器"/>
	<TextView 
	    android:id="@+id/textViewId1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="所有传感器显示的区域"/>
   <Button 
	    android:id="@+id/sensorButton2"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="获取重力传感器"/>
   <TextView android:id="@+id/textViewId2"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="重力传感器显示的区域"/>

</LinearLayout>

                            android:textSize="25sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="+0.00"
                            android:textColor="#4169E1"
                            android:textSize="25sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="mv "
                            android:textColor="#4169E1"
                            android:textSize="25sp" />
                    </LinearLayout>
                </LinearLayout><!-- 4 -->


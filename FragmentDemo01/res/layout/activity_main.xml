<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <FrameLayout 
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        ></FrameLayout>
    <LinearLayout
        android:id="@+id/liearLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/tab_bg"
        >
        <RelativeLayout 
            android:id="@+id/messageId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <LinearLayout 
         	android:layout_width="wrap_content"
         	android:layout_height="wrap_content"
         	android:layout_centerInParent="true"
         	android:orientation="vertical"
         
        	 >
            
            <ImageView 
                android:id="@+id/message_imageviewId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               
                android:src="@drawable/message_unselect"
                />
            <TextView 
                android:id="@+id/message_textId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="消息"
               
                />
            </LinearLayout>
        </RelativeLayout>
        
        <RelativeLayout 
            android:id="@+id/contactsId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
             <LinearLayout 
         	android:layout_width="wrap_content"
         	android:layout_height="wrap_content"
         	android:layout_centerInParent="true"
         	android:orientation="vertical"
         
         	>
            
            <ImageView 
                android:id="@+id/contacts_imageviewId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               
                android:src="@drawable/contacts_unselect"
                />
            <TextView 
                android:id="@+id/contacts_textId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="联系人"
               
                
                />
            </LinearLayout>
        </RelativeLayout>
        
        <RelativeLayout 
            android:id="@+id/newsId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
             <LinearLayout 
        	 android:layout_width="wrap_content"
        	 android:layout_height="wrap_content"
         	android:layout_centerInParent="true"
         	android:orientation="vertical"
         
        	 >
            <ImageView 
                android:id="@+id/news_imageviewId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               
                android:src="@drawable/news_unselect"
                />
            <TextView 
                android:id="@+id/news_textId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="动态"
               
                
                />
            </LinearLayout>
        </RelativeLayout>
        
        <RelativeLayout 
            android:id="@+id/settingId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
             <LinearLayout 
         	android:layout_width="wrap_content"
         	android:layout_height="wrap_content"
         	android:layout_centerInParent="true"
         	android:orientation="vertical"
         
        	 >
            <ImageView 
                android:id="@+id/setting_imageviewId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                
                android:src="@drawable/setting_unselect"
                />
            <TextView 
                android:id="@+id/setting_textId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="设置"
               
                
                />
            </LinearLayout>
        </RelativeLayout>
        
        
        
        
    </LinearLayout>
    
    


</LinearLayout>
